<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE REPORT SYSTEM "PHPReport.dtd">
<REPORT>
	<TITLE>Gewerkte uren per klant</TITLE>
   <BACKGROUND_COLOR>#FFFFFF</BACKGROUND_COLOR>
   <CSS>css/phpreports.css</CSS>  
   <PAGE BORDER="1" SIZE="2500" CELLSPACING="0" CELLPADDING="5" ALIGN="CENTER" WIDTH="500">
      <HEADER>
         <ROW>
            <COL COLSPAN="5" CELLCLASS="PAGE_LAYER" TEXTCLASS="BOLD">Gewerkte uren per klant</COL>
         </ROW>
      </HEADER>		
   </PAGE>
	<GROUPS>
      <GROUP NAME="customer_id" EXPRESSION="customer_id">
	<HEADER>
		<ROW>
			<COL COLSPAN="3"></COL>
		</ROW>
		<ROW>
			<COL COLSPAN="3" TYPE="EXPRESSION" CELLCLASS="HEADER">"Klant: ".$this->getValue("customer_id")</COL>
		</ROW>
	</HEADER>
		<FIELDS>
			<ROW>
				<COL TYPE="FIELD" CELLCLASSEVEN="EVEN" CELLCLASSODD="ODD">tn</COL>
				<COL TYPE="FIELD" CELLCLASSEVEN="EVEN" CELLCLASSODD="ODD">title</COL>
				<COL TYPE="FIELD" CELLCLASSEVEN="EVEN" CELLCLASSODD="ODD">time_unit</COL>
			</ROW>
		</FIELDS>
	<FOOTER>
		<ROW>
			<COL ALIGN="RIGHT" COLSPAN="2" CELLCLASS="FOOTER" TYPE="EXPRESSION">"Totaal ".$this->getRowCount("tn")." tickets  voor ".$this->getValue("customer_id")</COL>
			<COL ALIGN="RIGHT" CELLCLASS="FOOTER" TYPE="EXPRESSION">$this->getSum("time_unit")." min"</COL>
		</ROW>
	</FOOTER>
	</GROUP>
	</GROUPS>
</REPORT>
